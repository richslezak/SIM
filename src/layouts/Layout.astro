---
import '../styles/bootstrap.min.css';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import {
  SITE_TITLE,
  SITE_DESCRIPTION,
  SITE_KEYWORDS,
  SIM_WHITE_SECONDARY,
  SIM_GRAY,
  SIM_RED,
} from '../config';

export interface Props {
  title: string;
}

const { title } = Astro.props;
const bodyColor = SIM_WHITE_SECONDARY;
const fontColor = SIM_GRAY;
const hoverColor = SIM_RED;
---

<!DOCTYPE html>
<html lang="en" class="h-100">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon-sim.svg" />
    <meta name="description" content={SITE_DESCRIPTION} />
    <meta name="keywords" content={SITE_KEYWORDS} />
    <title>{title} - {SITE_TITLE}</title>
  </head>
  <body class="d-flex flex-column h-100">
    <Header />
    <slot />
    <Footer />
    <script>
      import '../scripts/bootstrap.bundle.min.js';
    </script>
  </body>
</html>
<style lang="scss" is:global define:vars={{ bodyColor, fontColor, hoverColor }}>
  html {
    background-color: var(--bodyColor);
  }

  body {
    padding-top: 3.5rem;
    color: var(--fontColor);
    background-color: transparent;
  }

  main {
    padding-top: 3rem;
    padding-bottom: 3rem;
  }

  section {
    margin-bottom: 5rem;
  }

  a,
  a:hover {
    text-decoration: none;
    color: var(--fontColor);
  }

  .cardone {
    font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
    font-style: italic;
  }

  @media (min-width: 768px) {
    body {
      padding-top: 3.5rem;
    }
  }

  @media (min-width: 992px) {
    body {
      padding-top: 3.9rem;
    }

    .navbar-brand {
      margin-right: 4rem;
    }

    .link-effect {
      box-shadow: inset 0 0 0 0 var(--hoverColor);
      color: var(--fontColor);
      margin: 0 -0.225rem;
      padding: 0 0.225rem;
      border-radius: 0.25rem;
      transition: color 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
      &:hover {
        box-shadow: inset 12rem 0 0 0 var(--hoverColor);
        color: white;
      }
    }
  }
</style>
