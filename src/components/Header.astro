---
import HeaderLink from "./HeaderLink.astro";
import logo from "../images/sim-white.svg";
---

<header>
  <nav class="navbar navbar-expand-md navbar-dark2 fixed-top bg-dark2">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <img src={logo} alt="Sound in Motion logo" />
      </a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarCollapse"
        aria-controls="navbarCollapse"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav me-auto mb-2 mb-md-0">
          <li class="nav-item">
            <HeaderLink href="/">Home</HeaderLink>
          </li>
          <li class="nav-item">
            <HeaderLink href="/about">About</HeaderLink>
          </li>
          <li class="nav-item">
            <HeaderLink href="/installs">Installs</HeaderLink>
          </li>
          <li class="nav-item">
            <HeaderLink href="/products">Products</HeaderLink>
          </li>
          <li class="nav-item">
            <HeaderLink href="/testimonials">Testimonials</HeaderLink>
          </li>
          <li class="nav-item">
            <HeaderLink href="/publications">Publications</HeaderLink>
          </li>
          <li class="nav-item">
            <HeaderLink href="/contact">Contact</HeaderLink>
          </li>
        </ul>
        <!-- <form class="d-flex" role="search">
          <input
            class="form-control me-2"
            type="search"
            placeholder="Search"
            aria-label="Search"
          />
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form> -->
      </div>
    </div>
  </nav>
</header>
<style>
  .navbar {
    padding: 1.5rem 0;
    background-color: #336699;
  }
  .navbar-brand img {
    max-width: 150px;
  }
  .nav-link {
    font-size: 1.5em;
  }
  .navbar-nav .nav-link {
    color: #fff;
  }
  .navbar-nav .nav-link.active,
  .navbar-nav .show > .nav-link {
    color: rgb(194, 193, 193);
  }
</style>
