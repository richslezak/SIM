---
import HeaderLink from "./HeaderLink.astro";
import logo from "../images/logos/sim-logo-white.svg";
import { SIM_RED, SIM_RED_SECONDARY, SIM_WHITE } from "../config";

const navBackgroundColor = SIM_RED;
const navColor = SIM_WHITE;
const linkActiveColor = SIM_RED_SECONDARY;
---

<header>
  <nav class="navbar navbar-expand-lg fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src={logo} alt="Sound in Motion logo" />
      </a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarCollapse"
        aria-controls="navbarCollapse"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav me-auto mb-2 mb-md-0">
          <li class="nav-item">
            <HeaderLink href="/">Home</HeaderLink>
          </li>
          <li class="nav-item">
            <HeaderLink href="/about">About</HeaderLink>
          </li>
          <li class="nav-item">
            <HeaderLink href="/installs">Installs</HeaderLink>
          </li>
          <li class="nav-item">
            <HeaderLink href="/products/product-lines" id="nav-products">Products</HeaderLink>
          </li>
          <li class="nav-item">
            <HeaderLink href="/media/testimonials" id="nav-media">Media</HeaderLink>
          </li>
          <!-- <li class="nav-item">
            <HeaderLink href="/media/testimonials">Testimonials</HeaderLink>
          </li>
          <li class="nav-item">
            <HeaderLink href="/media/accolades">Accolades</HeaderLink>
          </li> -->
          <li class="nav-item">
            <HeaderLink href="/contact">Contact</HeaderLink>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
<style define:vars={{ navBackgroundColor, navColor, linkActiveColor }}>
  .navbar {
    padding: 0;
    background-color: var(--navBackgroundColor);
    box-shadow: 0 0.5rem 1rem rgb(0 0 0 / 15%), inset 0 -1px 0 rgb(0 0 0 / 15%);
  }

  .navbar-brand img {
    max-width: 100px;
  }

  .navbar-toggler {
    border: none;
    color: var(--navColor);
    margin-top: 0.6rem;
    margin-bottom: 0.6rem;
  }

  .navbar-toggler-icon {
    background-image: url(../images/list.svg);
    background-size: 140%;
  }

  .nav-link {
    font-size: 1.5em;
  }

  .navbar-nav {
    height: 100vh;
  }

  .navbar-nav .nav-link {
    color: var(--navColor);
    padding: 1.2rem 2rem 1.5rem;
    border-top: 0.3rem solid transparent;
  }

  .navbar-nav .nav-link:hover {
    background-color: var(--linkActiveColor);
  }

  .navbar-nav .nav-link.active,
  .navbar-nav .show > .nav-link {
    color: var(--navColor);
    background-color: var(--linkActiveColor);
    border-radius: 0.25rem;
  }

  @media (min-width: 768px) {
    .navbar-brand img {
      max-width: 150px;
    }

    .navbar-toggler {
      margin-top: 1.5rem;
      margin-bottom: 1.5rem;
    }
  }

  @media (min-width: 992px) {
    .navbar-nav {
      height: auto;
    }

    .navbar-nav .nav-link.active,
    .navbar-nav .show > .nav-link {
      border-top: 0.3rem solid var(--navColor);
      background-color: transparent;
      border-radius: 0;
    }

    .navbar-expand-lg .navbar-nav .nav-link {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }
  }

  @media (min-width: 1200px) {
    .navbar-expand-lg .navbar-nav .nav-link {
      padding-left: 2rem;
      padding-right: 2rem;
    }
  }
</style>
