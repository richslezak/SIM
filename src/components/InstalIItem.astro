---
const { url, src, name, description, date } = Astro.props;
---

<div class="install-container shadow-sm">
  <img src={src} alt={name} />
  <div>
    <p class="mb-3">{description}</p>
    <h6>
      <a href={url} class="stretched-link">{name}</a>
      <span class="small">{date}</span>
    </h6>
  </div>
</div>

<style lang="scss">
  .install-container {
    position: relative;
    text-align: left;
    margin-bottom: 2rem;
    background-color: var(--sim-white);
    border-radius: 0.375rem;
    img {
      max-width: 100%;
      height: auto;
      border-top-left-radius: 0.375rem;
      border-top-right-radius: 0.375rem;
    }
    div {
      padding: 1rem;
    }
    a {
      color: var(--sim-red);
      margin-bottom: 0;
    }
  }

  @media (min-width: 992px) {
    .install-container {
      display: flex;
      align-items: center;
      max-width: 100%;
      img {
        width: 300px;
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
        border-bottom-left-radius: 0.375rem;
      }
      div {
        padding-left: 3rem;
      }
    }
  }
</style>
