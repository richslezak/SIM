---
const { item } = Astro.props;
---

<li>
  <a class="link-effect" href={item.linkUrl} target="_blank">
    {item.linkText}
  </a>
</li>

<style>
  li {
    margin-bottom: 1rem;
    font-size: 1.2rem;
    flex-basis: 100%;
  }

  img {
    max-width: 100%;
    height: 2rem;
  }

  @media (min-width: 400px) {
    li {
      flex-basis: 50%;
    }
  }

  @media (min-width: 1200px) {
    li {
      flex-basis: 33.3333333333%;
    }
  }
</style>
