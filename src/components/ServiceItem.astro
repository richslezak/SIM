---
const { url, src, title } = Astro.props;
---

<div class="service-container shadow-sm">
  <img src={src} alt={title} />
  <div>
    <a href={url} class="stretched-link">{title}</a>
  </div>
</div>

<style lang="scss">
  .service-container {
    position: relative;
    display: flex;
    align-items: center;
    max-width: 100%;
    text-align: left;
    margin-bottom: 2rem;
    background-color: var(--sim-white);
    border-radius: 0.375rem;
    min-height: 64px;
    img {
      display: none;
    }
    div {
      padding: 0.5rem 1rem;
      &::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        width: 0.2rem;
        height: 100%;
        background-color: var(--sim-red);
        border-radius: 0.375rem 0 0 0.375rem;
      }
    }
  }

  @media (min-width: 480px) {
    .service-container {
      img {
        display: block;
        width: 100px;
        border-radius: 0.375rem 0 0 0.375rem;
      }
      div {
        &::before {
          width: 0;
          height: 0;
        }
      }
    }
  }
</style>
