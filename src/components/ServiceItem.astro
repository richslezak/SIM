---
const { url, src, title } = Astro.props;
---

<div id="service-container">
  <div class="image-container">
    <img src={src} alt={title} />
  </div>
  <div class="link-container">
    <a href={url} class="stretched-link">{title}</a>
  </div>
</div>

<style lang="scss">
  #service-container {
    position: relative;
    display: flex;
    align-items: center;
    max-width: 100%;
    text-align: left;
    margin-bottom: 2rem;
    background-color: var(--sim-white);
    border-radius: 0.375rem;
    min-height: 75px;
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    .image-container {
      display: none;
    }
    .link-container {
      padding: 0.5rem 1rem;
      &::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        width: 0.2rem;
        height: 100%;
        background-color: var(--sim-red);
        border-radius: 0.375rem 0 0 0.375rem;
      }
    }
  }

  @media (min-width: 480px) {
    #service-container {
      .image-container {
        display: block;
        img {
          width: 100px;
          border-radius: 0.375rem 0 0 0.375rem;
        }
      }
      .link-container {
        &::before {
          width: 0;
          height: 0;
        }
      }
      &:hover {
        transition: all 0.15s ease-in-out;
        box-shadow: none;
        .image-container {
          position: relative;
          &::after {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            mix-blend-mode: multiply;
            background: var(--sim-red);
            border-radius: 0.375rem 0 0 0.375rem;
          }
          img {
            transition: all 0.15s;
            filter: grayscale(1) brightness(150%);
          }
        }
      }
    }
  }
</style>
