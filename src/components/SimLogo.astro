---
import soundInMotionImg from '../images/logos/sound-in-motion.png';
---

<div id="sim-logo">
  <img
    src={soundInMotionImg}
    alt="Sound in Motion - High Performance Car Audio - Boston MA"
    class="img-fluid"
  />
  <h4>High Performance Car Audio</h4>
  <h4>Boston MA</h4>
</div>

<style lang="scss">
  #sim-logo {
    width: 300px;
    h4 {
      font-family: sans-serif;
      font-style: italic;
      font-size: 1.3rem;
      font-weight: bolder;
      letter-spacing: -0.07rem;
      margin-top: 0.5rem;
      margin-bottom: 0;
      color: var(--sim-black);
      + h4 {
        text-align: right;
        margin-right: 0.3rem;
      }
    }
  }

  @media (min-width: 480px) {
    #sim-logo {
      width: 400px;
      h4 {
        font-size: 1.7rem;
      }
    }
  }
</style>
