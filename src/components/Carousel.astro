  .overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 2;
    background-color: #000;
    opacity: 0.3;
  }

  .carousel {
    border-top: 0.3rem solid var(--borderColor);
    margin-bottom: 4rem;
  }

  .carousel-control-prev,
  .carousel-control-next {
    z-index: 15;
  }

  .carousel-item {
    height: 15rem;
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
  }

  .slide-1 {
    background-image: url("../images/homePage/001.jpg");
  }

  .slide-2 {
    background-image: url("../images/homePage/002.jpg");
  }

  .slide-3 {
