  }

  .slide-7 {
    background-image: url("../images/homePage/007.jpg");
  }

  .slide-8 {
    background-image: url("../images/homePage/008.jpg");
  }

  @media (min-width: 575px) {
    .carousel-item {
      height: 20rem;
    }
  }

  @media (min-width: 768px) {
    .carousel-item {
      height: 28rem;
    }
  }

  @media (min-width: 992px) {
    .carousel-item {
      height: 35rem;
    }
  }
</style>
