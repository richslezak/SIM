    <div class="carousel-item slide-15"><h1>15</h1></div>
    <div class="carousel-item slide-16"><h1>16</h1></div>
    <div class="carousel-item slide-17"><h1>17</h1></div>
    <div class="carousel-item slide-18"><h1>18</h1></div>
    <div class="carousel-item slide-19"><h1>19</h1></div>
    <div class="carousel-item slide-20"><h1>20</h1></div>
    <div class="carousel-item slide-21"><h1>21</h1></div>
    <div class="carousel-item slide-22"><h1>22</h1></div>
    <div class="carousel-item slide-23"><h1>23</h1></div>
    <div class="carousel-item slide-24"><h1>24</h1></div>
  </div>

  <button
    class="carousel-control-prev"
    type="button"
    data-bs-target="#homeCarousel"
    data-bs-slide="prev"
  >
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button
    class="carousel-control-next"
    type="button"
    data-bs-target="#homeCarousel"
    data-bs-slide="next"
  >
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<style lang="scss" define:vars={{ borderColor, textColor }}>
  $carousel-transition-duration: 0.1s;
  .overlay {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 2;
    background-color: #000;
    opacity: 0.3;
  }

  .carousel {
    border-top: 0.3rem solid var(--borderColor);
    h1 {
      font-size: 10rem;
      color: white;
      text-align: center;
      margin-top: 2rem;
    }
  }

  .carousel-control-prev,
  .carousel-control-next {
    z-index: 15;
  }

  .carousel-item {
    height: 15rem;
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
    transition: transform 0.1s ease-in-out;
    transition: transform 2s ease, opacity 0.5s ease-out;
  }

