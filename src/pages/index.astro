---
import Layout from '../layouts/Layout.astro';
import Carousel from '../components/Carousel.astro';
import SimLogo from '../components/SimLogo.astro';
import SectionHeading from '../components/SectionHeading.astro';
import SimServices from '../components/SimServices.astro';
import CardoneServices from '../components/CardoneServices.astro';
---

<Layout title="Boston's Best Mobile Entertainment Design, Installation & Custom Fabrication Shops">
  <main class="flex-shrink-0">
    <Carousel />
    <div class="container fade-in">
      <section class="logo-container d-flex">
        <SimLogo />
      </section>
      <section>
        <SectionHeading
          heading="What We Offer"
          description="Consultation, Design, Sales and Installation of the following:"
        />
        <SimServices />
      </section>
      <section>
        <CardoneServices />
      </section>
      <section>
        <SectionHeading
          heading="Latest Projects"
          description="See what's currently going on at the shop"
        />
        <div class="ig-container">
          <iframe
            class="instagram-media astro-GFS3HBTJ instagram-media-rendered"
            id="instagram-embed-0"
            src="https://www.instagram.com/soundinmotionboston/embed/?cr=1&v=14&wp=1080&rd=http%3A%2F%2F127.0.0.1%3A3000&rp=%2F#%7B%22ci%22%3A0%2C%22os%22%3A551.7999999970198%2C%22ls%22%3A32.70000000298023%2C%22le%22%3A414.20000000298023%7D"
            allowtransparency="true"
            allowfullscreen="true"
            frameborder="0"
            height="559"
            data-instgrm-payload-id="instagram-media-payload-0"
            scrolling="no"
            loading="lazy"></iframe>
          <div class="blocker"></div>
        </div>
        <script async src="//www.instagram.com/embed.js"></script>
      </section>
    </div>
  </main>
</Layout>

<style lang="scss">
  main {
    padding-top: 0;
  }

  section:last-child {
    margin-bottom: 0;
  }

  .logo-container {
    justify-content: center;
    padding-top: 1rem;
  }

  #instagram-embed-0 {
    display: block;
    background: var(--sim-white);
    border-radius: 0.375rem;
    border: 1px solid var(--sim-gray-xlt);
    min-width: 280px;
    width: calc(100% - 2px);
  }

  .ig-container {
    position: relative;
    .blocker {
      background-color: var(--sim-white-secondary);
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      z-index: 4;
      width: calc(100% - 2px);
      height: 46.5px;
      margin-top: -46.5px;
    }
  }

  @media (min-width: 509px) {
    .ig-container .blocker {
      height: 62.5px;
      margin-top: 62.5px;
    }
  }

  @media (min-width: 992px) {
    section:nth-child(n + 2):nth-child(-n + 3) {
      margin-bottom: 10rem;
    }

    .logo-container {
      justify-content: flex-end;
      margin-bottom: -2rem;
    }
  }
</style>
