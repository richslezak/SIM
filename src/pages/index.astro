---
import Layout from "../layouts/Layout.astro";
import Carousel from "../components/Carousel.astro";
import LinkCardExternal from "../components/LinkCardExternal.astro";
import LinkCard from "../components/LinkCard.astro";
import SimLogo from "../components/SimLogo.astro";
import IconCaret from "../components/IconCaret.astro";
import { SIM_RED, SIM_GRAY, SIM_WHITE } from "../config";
import cupholder from "../images/installs/porscheCup/002.jpg";
import subwoofer from "../images/installs/porscheSub/002.jpg";
import speaker from "../images/installs/porscheSpeakerFix/007.jpg";
import door from "../images/installs/porscheDoorFix/002.jpg";
import paintCorrection from "../images/cardone/paint-correction.jpg";
import ceramicCoating from "../images/cardone/ceramic-coating.jpg";
import paintProtectionFilm from "../images/cardone/paint-protection-film.jpg";
import windowTint from "../images/cardone/window-tint.jpg";
import carStorage from "../images/cardone/car-storage.jpg";
import carRental from "../images/cardone/turo-rental.jpg";

const headingTitle = SIM_RED;
---

<Layout title="Boston's Best Mobile Entertainment Design, Installation & Custom Fabrication Shops">
  <main class="flex-shrink-0">
    <Carousel />
    <div class="container">
      <section class="logo-container d-flex">
        <SimLogo />
      </section>
      <section>
        <h3 class="display-6">What We Offer</h3>
        <p class="lead">Consultation, Design, Sales and Installation of the following:</p>

        <ul class="list-unstyled">
          <li>
            <a href="fullSystemInstalls.html">Upgraded and High Performance Car Audio Systems</a>
          </li>

          <li><a href="installsDetail.html?id=0">Apple CarPlay & Android Auto Integration</a></li>

          <li>
            <a href="installsDetail.html?id=4">Radar & Laser Detection and Defense Systems</a>
          </li>

          <li><a href="/products/porsche-cupholder">Porsche Specific Upgrades & Fixes</a></li>

          <li><a href="installsDetail.html?id=5">Back-Up, Front & 360 Birdseye View Cameras</a></li>

          <li>Advanced DSP Tuning</li>

          <li><a href="installsDetail.html?id=7">Sound Deadening</a></li>

          <li>ADAS (Advanced Driver Assistance Systems)</li>

          <li><a href="installsDetail.html?id=11">Remote Car Starters & Security Systems</a></li>
          <!-- <a href="installsDetail.html?id=10">Vehicle Security Systems</a> car starters and security will be merged -->

          <li><a href="installsDetail.html?id=2">Satellite & HD Radio Integration</a></li>
          <!-- <li><a href="installsDetail.html?id=8">HD Radio</a></li> HD radio and Satellite will be merged -->

          <li><a href="installsDetail.html?id=13">LED Lighting Upgrades</a></li>

          <li><a href="installsDetail.html?id=3">GPS Tracking and Fleet Management Systems</a></li>
          <!-- <li><a href="installsDetail.html?id=12">GPS Tracking Systems</a></li> -->

          <li>
            <a href="installsDetail.html?id=14">Custom Fabrication with Plastic, Wood, Metal etc.</a
            >
          </li>
        </ul>
      </section>
      <section id="cardone-services">
        <h4>
          Other services offered via our sister company <span>CarDone</span> Boston
        </h4>
        <div class="d-md-none">
          <ul class="list-unstyled">
            <li>
              <IconCaret class="caret" />
              <a href="https://www.cardoneboston.com/services/#paint-correction"
                >Paint Correction
              </a>
            </li>

            <li>
              <IconCaret class="caret" />
              <a href="https://www.cardoneboston.com/services/#ceramic-coatings"
                >Ceramic Coatings
              </a>
            </li>

            <li>
              <IconCaret class="caret" />
              <a href="https://www.cardoneboston.com/services/#paint-protection-film"
                ><span class="d-none d-sm-inline">Paint</span> Protection Film
              </a>
            </li>

            <li>
              <IconCaret class="caret" />
              <a href="https://www.cardoneboston.com/services/#window-tinting">Window Tinting</a>
            </li>

            <li>
              <IconCaret class="caret" />
              <a href="https://www.cardoneboston.com/services/#seasonal-car-storage">Car Storage</a>
            </li>

            <li>
              <IconCaret class="caret" />
              <a href="https://www.cardoneboston.com/services/#turo-vehicle-rental"
                ><span class="d-none d-sm-inline">Turo</span> Vehicle Rental
              </a>
            </li>
          </ul>
        </div>
        <div class="d-none d-md-block">
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-5">
            <div class="col d-flex align-items-stretch">
              <LinkCardExternal
                imgsrc={paintCorrection}
                cardTitle="Paint Correction"
                href="https://www.cardoneboston.com/services/#paint-correction"
              />
            </div>
            <div class="col d-flex align-items-stretch">
              <LinkCardExternal
                imgsrc={ceramicCoating}
                cardTitle="Ceramic Coatings"
                href="https://www.cardoneboston.com/services/#ceramic-coatings"
              />
            </div>
            <div class="col d-flex align-items-stretch">
              <LinkCardExternal
                imgsrc={paintProtectionFilm}
                cardTitle="Paint Protection Film"
                href="https://www.cardoneboston.com/services/#paint-protection-film"
              />
            </div>
            <div class="col d-flex align-items-stretch">
              <LinkCardExternal
                imgsrc={windowTint}
                cardTitle="Window Tinting"
                href="https://www.cardoneboston.com/services/#window-tinting"
              />
            </div>
            <div class="col d-flex align-items-stretch">
              <LinkCardExternal
                imgsrc={carStorage}
                cardTitle="Car Storage"
                href="https://www.cardoneboston.com/services/#seasonal-car-storage"
              />
            </div>
            <div class="col d-flex align-items-stretch">
              <LinkCardExternal
                imgsrc={carRental}
                cardTitle="Turo Vehicle Rental"
                href="https://www.cardoneboston.com/services/#turo-vehicle-rental"
              />
            </div>
          </div>
        </div>
      </section>
      <section>
        <h3 class="display-6">Porsche Upgrades</h3>
        <p class="lead">
          We have a number of solutions for the Porsche 911, 964, 996, 997, Boxster, and Cayman, as
          seen in Excellence Magazine.
        </p>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-44444 g-4">
          <div class="col d-flex align-items-stretch">
            <LinkCard
              imgsrc={cupholder}
              cardTitle="A Cup Holder for Your Early Porsche Boxster or 996"
              href="/products/porsche-cupholder"
              ribbon
            />
          </div>
          <div class="col d-flex align-items-stretch">
            <LinkCard
              imgsrc={subwoofer}
              cardTitle="A Subwoofer for Porsche 964, 996, 997, Boxster and Cayman"
              href="/products/porsche-subwoofer"
            />
          </div>
          <div class="col d-flex align-items-stretch">
            <LinkCard
              imgsrc={speaker}
              cardTitle="Porsche 911 Speaker Fix"
              href="/products/porsche-speaker-fix"
            />
          </div>
          <div class="col d-flex align-items-stretch">
            <LinkCard
              imgsrc={door}
              cardTitle="Porsche 911 Broken Door Pocket Fix"
              href="/products/porsche-door-pocket-fix"
            />
          </div>
        </div>
      </section>
    </div>
  </main>
</Layout>

<style lang="scss" define:vars={{ headingTitle }}>
  main {
    padding-top: 0;
  }

  section {
    margin-bottom: 5rem;
  }

  h3 {
    border-bottom: 2px solid var(--headingTitle);
    padding-bottom: 0.5rem;
    + p {
      margin-bottom: 2rem;
    }
  }

  h4 {
    margin-bottom: 1rem;
  }

  .logo-container {
    justify-content: center;
    padding-top: 1rem;
  }

  #cardone-services {
    h4 span {
      font-family: Impact, Haettenschweiler, "Arial Narrow Bold", sans-serif;
      font-style: italic;
    }
    ul {
      display: flex;
      flex-wrap: wrap;
      padding-left: 0;
      list-style: none;
    }

    li {
      margin-bottom: 1rem;
      flex-basis: 50%;
      .caret {
        color: var(--headingTitle);
        vertical-align: baseline;
        display: none;
      }
    }
  }

  @media (min-width: 375px) {
    #cardone-services li {
      font-size: 1.2rem;
      .caret {
        display: inline;
      }
    }
  }

  @media (min-width: 992px) {
    .logo-container {
      justify-content: flex-end;
    }
  }
</style>
