---
import Layout from "../../layouts/Layout.astro";
import ProductNav from "../../components/ProductNav.astro";
import ProductLinesItem from "../../components/ProductLinesItem.astro";
import data from "../../data/product-lines.json";
import { SIM_RED, SIM_GRAY_XLT } from "../../config";
const title = "Product Lines";
const { audio, radar, security, other } = data;
const headingTitle = SIM_RED;
const headingBorder = SIM_GRAY_XLT;
---

<Layout title={title}>
  <main>
    <ProductNav />
    <div class="container">
      <h1 class="display-6">{title}</h1>
      <p class="lead mb-5">
        Sound in Motion is an authorized dealer for most of the high quality top name brands at
        competitive prices. All of our installations are performed with the utmost care and highest
        quality of craftsmanship by trained and experienced technicians. We offer a lifetime
        warranty on all of our work for as long as you own the vehicle.
      </p>

      <div class="row row-cols-1 row-cols-md-2">
        <div class="align-items-stretch mb-5">
          <h4>Audio & Multimedia</h4>
          <ul class="list-unstyled">
            {audio.map((item) => <ProductLinesItem item={item} />)}
          </ul>
        </div>

        <div class="align-items-stretch mb-5">
          <h4>Dash Cams, Sound Deadening, Interfaces & Other</h4>
          <ul class="list-unstyled">
            {other.map((item) => <ProductLinesItem item={item} />)}
          </ul>
        </div>

        <div class="align-items-stretch mb-5">
          <h4>Radar & Laser Defense Systems</h4>
          <ul class="list-unstyled">
            {radar.map((item) => <ProductLinesItem item={item} />)}
          </ul>
        </div>

        <div class="align-items-stretch mb-5">
          <h4>Remote Starters & Security</h4>
          <ul class="list-unstyled">
            {security.map((item) => <ProductLinesItem item={item} />)}
          </ul>
        </div>
      </div>
    </div>
  </main>
</Layout>
<style define:vars={{ headingTitle, headingBorder }}>
  .container {
    animation: fadeIn linear 0.3s;
  }

  h4 {
    color: var(--headingTitle);
    border-bottom: 1px solid var(--headingBorder);
    padding-bottom: 0.5rem;
    margin-bottom: 2rem;
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  main {
    padding-top: 0;
  }
</style>
