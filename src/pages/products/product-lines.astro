---
import Layout from "../../layouts/Layout.astro";
import ProductNav from "../../components/ProductNav.astro";
const title = "Our Product Lines";
---

<Layout title={title}>
  <main>
    <ProductNav />
    <div class="container">
      <h3>{title}</h3>
      <p>
        <strong>Sound in Motion</strong> is an authorized dealer for most of the high quality top name
        brands at competitive prices. All of our installations are performed with the utmost care and
        highest quality of craftsmanship by trained and experienced technicians. We offer a lifetime
        warranty on all of our work for as long as you own the vehicle.
      </p>
    </div>
  </main>
</Layout>
<style>
  .container {
    animation: fadeIn linear 0.3s;
  }
  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
  main {
    padding-top: 0;
  }
</style>
