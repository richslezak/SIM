---
import Layout from '../layouts/Layout.astro';
import { SIM_RED, SIM_GRAY_XLT } from '../config';

const title = 'Contact Us';
const headingTitle = SIM_RED;
const mapBackground = SIM_GRAY_XLT;
---

<Layout title={title}>
  <main>
    <div class="container">
      <section>
        <div>
          <h1 class="display-6">{title}</h1>
          <p class="lead">
            Sound in Motion (a.k.a. SiM) is a renowned shop specializing in sales and installations
            of High Performance Car Audio systems, as well as Video, Multimedia, Navigation, Alarms
            and Remote Car Starters. With over 50 years of combined experience, Sound in Motion is
            one of the most recognized Mobile Electronics Specialty Retailers in the nation.
          </p>
        </div>
      </section>
      <section>
        <div class="row">
          <div class="col-xl-6">
            <ul class="list-unstyled">
              <li>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="36"
                  height="36"
                  fill="currentColor"
                  class="bi bi-geo-alt"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z"
                  ></path>
                  <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"
                  ></path>
                </svg>
                <address>
                  <h4>120 Elm St. rear</h4>
                  <h4>Watertown, MA 02472</h4>
                </address>
              </li>
              <li>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="36"
                  height="36"
                  fill="currentColor"
                  class="bi bi-telephone"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"
                  ></path>
                </svg>
                <address>
                  <h4>
                    <a class="link-effect" href="tel:617-787-7744">617-787-7744</a>
                  </h4>
                </address>
              </li>
              <li>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="36"
                  height="36"
                  fill="currentColor"
                  class="bi bi-envelope"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"
                  ></path>
                </svg>
                <address>
                  <h4>
                    <a class="link-effect" href="mailto:info@sound-in-motion">Email Us</a>
                  </h4>
                </address>
              </li>
              <li>
                <hr class="featurette-divider d-xl-none" />
                <h2 class="featurette-heading">Shop <span class="text-muted">Hours</span></h2>
                <h4>Mon-Fri 8:30AM to 5:00PM EST</h4>
              </li>
            </ul>
          </div>
          <div class="d-none d-xl-block col-xl-6">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d736.9646574824272!2d-71.155987!3d42.366852!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89e379c37505e611%3A0xd959acbf0d2f51bd!2sSound%20in%20Motion!5e0!3m2!1sen!2sus!4v1677542725903!5m2!1sen!2sus"
              id="location-map"
              class="shadow-sm"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>
        </div>
      </section>
    </div>
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d736.9646574824272!2d-71.155987!3d42.366852!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89e379c37505e611%3A0xd959acbf0d2f51bd!2sSound%20in%20Motion!5e0!3m2!1sen!2sus!4v1677542725903!5m2!1sen!2sus"
      id="location-map"
      class="d-xl-none"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"></iframe>
  </main>
  <style lang="scss" define:vars={{ headingTitle, mapBackground }}>
    main {
      padding-bottom: 0;
    }

    section {
      margin-bottom: 5rem;
    }

    ul {
      text-align: center;
      li {
        margin-bottom: 5rem;
      }
    }

    svg {
      margin-bottom: 2rem;
      color: var(--headingTitle);
    }

    .featurette-divider {
      margin: 0 0 5rem;
    }

    .featurette-heading {
      font-weight: 300;
      line-height: 1;
      color: var(--headingTitle);
      letter-spacing: -0.05rem;
      font-size: 2.5rem;
    }

    #location-map {
      width: 100%;
      height: 750px;
      margin-bottom: -0.25rem;
      border-top: 1px solid var(--mapBackground);
      background-color: var(--mapBackground);
    }

    @media (min-width: 1200px) {
      .featurette-heading {
        font-size: 3.125rem;
      }

      ul {
        text-align: left;
        li:nth-child(-n + 3) {
          display: flex;
        }
      }

      svg {
        margin-bottom: 0;
        margin-right: 2rem;
        display: inline-block;
      }

      address {
        display: inline-block;
      }

      #location-map {
        height: 540px;
        margin-bottom: 0;
        border-radius: 0.375rem;
      }
    }
  </style>
</Layout>
